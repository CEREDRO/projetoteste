<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>ric-web</display-name>
	<distributable/>
	
	<context-param>
		<param-name>resteasy.providers</param-name>
		<param-value>br.gov.caixa.arqrefcore.excecao.rs.DefaultExceptionMapper</param-value>
	</context-param>
	
	<servlet>
		<display-name>AppServlet</display-name>
		<servlet-name>AppServlet</servlet-name>
		<servlet-class>br.gov.caixa.arqrefweb.controle.AppServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AppServlet</servlet-name>
		<url-pattern>/AppServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<description></description>
		<display-name>LoginRedirectServlet</display-name>
		<servlet-name>LoginRedirectServlet</servlet-name>
		<servlet-class>br.gov.caixa.risco.rest.LoginRedirectServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginRedirectServlet</servlet-name>
		<url-pattern>/LoginRedirectServlet</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>LoginRedirectServlet</welcome-file>
	</welcome-file-list>
	
	<error-page>
		<error-code>403</error-code>
		<location>/error403.html</location>
	</error-page>
	
	<error-page>
		<error-code>404</error-code>
		<location>/error404.html</location>
	</error-page>
	
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/error404.html</location>
	</error-page>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Requisicao do Servlet</web-resource-name>
			<description>Todas</description>
			<url-pattern>/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>		
		
		<auth-constraint>
			<description>Acesso basico ao sistema</description>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Todas as Requisicoes ao servlet action - para layout</web-resource-name>
			<description>Todas requisicoes</description>
			<url-pattern>/layout/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		
		<web-resource-collection>
			<web-resource-name>Recurso javascript</web-resource-name>
			<description>Todas requisicoes</description>
			<url-pattern>/js/*</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
		
		<web-resource-collection>
			<web-resource-name>JavaScript</web-resource-name>
			<description>Todas requisicoes</description>
			<url-pattern>/rest/risco/retornalogin/*</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
		
		<web-resource-collection>
			<web-resource-name>JavaScript2</web-resource-name>
			<description>Todas requisicoes</description>
			<url-pattern>/resources/*</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
		
		<web-resource-collection>
			<web-resource-name>Todas as Requisicoes ao servlet action - para servi√ßos</web-resource-name>
			<description>Todas requisicoes</description>
			<url-pattern>/servicos/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
	</security-constraint>	 
	
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>default</realm-name>
		
		<form-login-config>
			<form-login-page>/login.html</form-login-page>
			<form-error-page>/loginError.html</form-error-page>
		</form-login-config>
	</login-config>
	
	<security-role>
		<description>Todas as roles</description>
		<role-name>*</role-name>
	</security-role>
	
</web-app>
